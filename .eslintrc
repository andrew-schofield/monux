{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "root": true,
  "extends": "standard",
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": [
      "warn", {
        "vars": "all",
        "args": "none"
      }
    ]
  }
}
