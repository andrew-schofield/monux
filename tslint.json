{
  "defaultSeverity": "error",
  "extends": "tslint:latest",
  "rules": {
    "quotemark": {
      "options": ["single", "avoid-template"],
      "severity": "warn"
    },
    "semicolon": {
      "options": ["never"]
    },
    "trailing-comma": {
      "options": {
          "multiline": "never",
          "singleline": "never"
      }
    },
    "no-console": {
      "options": ["log"],
      "severity": "warn"
    },
    "curly": {
      "options": ["ignore-same-line"]
    },
    "object-literal-sort-keys": false
  }
}
